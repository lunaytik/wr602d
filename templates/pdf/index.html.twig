{% extends 'base.html.twig' %}

{% block title %}Gotenberg - Pdf Generation{% endblock %}

{% block body %}
    <section class="bg-gray-900 flex flex-1">
        <div class="flex flex-col flex-1 items-center justify-center px-6 py-8 mx-auto lg:py-0">
            <div class="w-full rounded-lg shadow border md:mt-0 sm:max-w-md xl:p-0 bg-gray-800 border-gray-700">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <h1 class="text-xl font-bold leading-tight tracking-tight md:text-2xl text-white">
                        Pdf Generation
                    </h1>
                    <p class="text-gray-400">Remaining generations: {{ remainingCount }} / {{ user.subscription.pdfLimit }}</p>
                    {{ form_errors(form) }}
                    {{ form_start(form, {'attr': {'class': 'space-y-4 md:space-y-6'}, 'label': false }) }}
                        {{ form_row(form.title) }}
                        {{ form_row(form.url) }}
                        <button type="submit" class="w-full focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-primary-600 hover:bg-primary-700 focus:ring-primary-800">Generate</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
